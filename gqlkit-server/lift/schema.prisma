datasource db {
    provider = "postgresql"
    url      = "postgresql://postgres:postgres@localhost:5432/postgres?schema=public"
}

model todos {
    id   String @default(cuid()) @id
    text String
    done Boolean
    user_id String
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt
}

model users {
    id   String @default(cuid()) @id
    name String
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt
}